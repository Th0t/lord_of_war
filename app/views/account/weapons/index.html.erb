<div class="container text-center">
  <div class="tabs">
    <%= link_to account_profile_path, class: "tab", :data => { :target => "#dashboard" } do %>
      <p>Dashboard</p>
    <% end %>
    <a class="tab active"  data-target="#weapons">
      <p>My weapons</p>
    </a>
    <a class="tab"  data-target="#booksforme">
      <p>Books for me</p>
    </a>
    <a class="tab"  data-target="#booksbyme">
      <p>Books by me</p>
    </a>
    <a class="tab"  data-target="#settings">
      <p>Settings</p>
    </a>
  </div>
</div>

<div class="container text-center">
  <div class="tab-content" id="weapons">
    <div class="container" style="text-align:center">
      <h1>My weapons list</h1>
      <div class="row" id="weapons-list">
        <% @weapons.each do |weapon| %>
        <div class="col-xs-12 col-sm-4">
          <%= link_to weapon_path(weapon.id) do %>
          <div class="card">
            <div class="card-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
            url('<%= image_path weapon.photo_url %>');"></div>
            <div class="card-description">
              <div class="card-price"><%= "#{number_with_delimiter(weapon.price)} â‚¬" %></div>
              <div class="card-title"><%= weapon.title %></div>
            </div>
          </div>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


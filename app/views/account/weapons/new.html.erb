
<div class="container text-center" >
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3" id="form-new-weapon">
      <%= simple_form_for @weapon, url: account_weapons_path do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :category, collection: %w(pistols riffles knives heavy shotguns swords)  %>
      <%= f.input :price, label: "Price per day (â‚¬)" %>
      <%= f.input :availability, label: "Available", collection: ["yes", "no"] %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "Create Weapon", class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>
</div>
